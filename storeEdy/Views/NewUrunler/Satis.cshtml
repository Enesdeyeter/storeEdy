<div class="col-xl-12 mb-4 mb-xl-0">
    <div class="card shadow">
        <div class="card-header border-0">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0">Hızlı Satış Ekranı</h3>
                </div>
                <div class="col text-right">
                    <a href="@Url.Action("Satis","NewUrunler")" class="btn btn-sm btn-primary">Temizle</a>
                </div>
            </div>
        </div>

        <form id="formSearch" method="post" autocomplete="on">
            <div class="card-body">
                <div class="input-group">
                    <div class="input-group-btn">
                        <button type="submit" id="submitsearch" class="btn btn-success" style="border-radius: .375rem 0 0 .375rem;height: 46px;">
                            <i class="fa fa-barcode" aria-hidden="true"></i> Ürünü Bul
                        </button>
                    </div>
                    <!-- /btn-group -->
                    <input type="text" id="barkod" maxlength="8" name="barkod" class="form-control" placeholder="Barkod giriniz..." style="text-indent:15px;">
                </div>
            </div>
        </form>

    </div>
</div>


<div class="col-xl-12 mt-4 mb-xl-0">
    <div class="card shadow">
        @*<div class="card-header border-0">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="mb-0">Hızlı Satış Ekranı</h3>
                    </div>
                    <div class="col text-right">
                        <a href="#!" class="btn btn-sm btn-primary">See all</a>
                    </div>
                </div>
            </div>*@
        <div class="card-body">
            <div class="col-xl-12 mb-5 pt-3 mb--0 mb-xl-12">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="mb-0">Aranan Ürün</h3>
                            </div>
                            <div class="col text-right">
                                <a href="@Url.Action("Sepet","Satis")" class="btn btn-sm btn-outline-darker">Sepete Git</a>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <!-- Projects table -->
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.barkod)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.urunAd)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.urunAciklama)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.urunFiyat)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null)
                                {

                                    if (Model.Count() == 0)
                                    {
                                        <tr>
                                            <td colspan=3 style="color:red">
                                                Eşleşme Yok !
                                            </td>
                                        </tr>
                                    }

                                    else
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <th scope="row">
                                                    @Html.DisplayFor(modelItem => item.barkod)
                                                </th>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.urunAd)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.urunAciklama)
                                                </td>
                                                <td>
                                                    <i class="fas fa-lira-sign mr-2" aria-hidden="true"></i> @Html.DisplayFor(modelItem => item.urunFiyat)
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("Sepet", "Satis", new { id = item.Urunid },null)" class="btn btn-sm btn-primary"><i class="fas fa-cart-plus text-dark mr-2 text-white" aria-hidden="true"></i> Sepete Ekle</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


