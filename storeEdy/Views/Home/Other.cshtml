
@{
    ViewBag.Title = "StoreEdy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-xl-6 col-lg-6 mt-2">
    <div class="alert alert-light" role="alert">
        @*<span class="alert-inner--icon"><i class="fas fa-info"></i></span>*@
        <span class="alert-inner--text text-black-50"><strong>Bilgilendirme!</strong><br /> Sisteme kayıtlı tüm ürünleri detaylı bir şekilde görmek için <a style="color:#212121; font-weight:700" href="@Url.Action("Index", "NewUrunler")">tıklayınız.</a> </span>
    </div>
</div>

<div class="col-xl-6 col-lg-6 mt-2">
    <div class="alert alert-light" role="alert">
        @*<span class="alert-inner--icon"><i class="fas fa-info"></i></span>*@
