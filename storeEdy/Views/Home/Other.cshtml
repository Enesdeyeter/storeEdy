    </div>
</div>





<div class="col-xl-4 col-lg-4 mt-4">
    <div class="card card-stats mb-4 mb-xl-0" style="background:#38448a;">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h5 class="card-title text-uppercase text-muted mb-0">Yeni Ürün Ekle</h5>
                    <span class="h2 font-weight-bold mb-0" style="color:whitesmoke">Sisteme Yeni Ürün Ekleyin</span>
                </div>
                <div class="col-auto">
                    <div class="icon icon-shape bg-success text-white rounded-circle shadow">
                        <i class="fas fa-plus"></i>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Create", "NewUrunler")">
                <button type="button" class="btn btn-secondary btn-block btn-sm mt-3">Detaylı Bilgi</button>
            </a>
        </div>
    </div>
</div>


